---
import '../styles/global.css';
import Seo from '../components/Seo.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SkipLink from '../components/SkipLink.astro';
import { site } from '../config/site';

const {
  title = 'Nellie Borrero â€” Igniting Inclusive Leadership',
  description = 'Author and advisor advancing inclusion, leadership accountability, and culture transformation at global scale.',
  path = '/',
  openGraph = {}
} = Astro.props;
---
<!doctype html>
<html lang="en" class="scroll-smooth bg-snow text-charcoal">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<Seo {title} {description} {path} {openGraph} />
		{site.analyticsEnabled && (<script defer data-domain={site.domain} src="https://plausible.io/js/script.js"></script>)}
	</head>
	<body class="min-h-screen antialiased">
		<SkipLink target="#main" />
		<Header />
		<main id="main" tabindex="-1">
			<slot />
		</main>
		<Footer />
	</body>
</html>
