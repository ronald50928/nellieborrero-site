---
import { site } from '../config/site';
import LazyImage from './LazyImage.astro';
---
<header class="bg-snow border-b border-gray-200">
	<div class="container flex items-center justify-between py-4" role="navigation" aria-label="Primary">
		<a href="/" class="flex items-center gap-2 focus:outline-none" aria-label="Go to homepage">
			<LazyImage 
				src="/logo-header.png" 
				alt={site.name} 
				width={48} 
				height={48} 
				class="w-12 h-12"
				loading="eager"
			/>
			<span class="font-bold text-xl">{site.name}</span>
		</a>
		<nav aria-label="Main navigation">
			<ul class="flex gap-6" role="menubar">
				<li role="none"><a class="hover:underline focus:underline" href="/" role="menuitem" aria-current={Astro.url.pathname === '/' ? 'page' : undefined}>Home</a></li>
				<li role="none"><a class="hover:underline focus:underline" href="/services/" role="menuitem" aria-current={Astro.url.pathname.startsWith('/services') ? 'page' : undefined}>Services</a></li>
				<li role="none"><a class="hover:underline focus:underline" href="/about/" role="menuitem" aria-current={Astro.url.pathname.startsWith('/about') ? 'page' : undefined}>About</a></li>
			</ul>
		</nav>
	</div>
</header>

